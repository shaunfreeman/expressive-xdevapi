{
  "name": "shaunfreeman/expressive-xdevapi",
  "description": "PSR-11 library for easy setup of MySQL X DevAPI into Zend Expressive.",
  "minimum-stability": "dev",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Shaun Freeman",
      "email": "shaun@shaunfreeman.co.uk"
    }
  ],
  "keywords": [
    "mysql",
    "X DevAPI",
    "mysql_xdevapi",
    "psr",
    "psr-7",
    "psr-11",
    "psr-15",
    "expressive",
    "zf",
    "zendframework",
    "zend-expressive"
  ],
  "support": {
    "issues": "https://github.com/shaunfreeman/expressive-xdevapi/issues",
    "source": "https://github.com/shaunfreeman/expressive-xdevapi"
  },
  "require": {
    "php": "^7.2",
    "ext-json": "*",
    "ext-mysql_xdevapi": "*",
    "psr/container": "^1.0",
    "ramsey/uuid": "^3.8"
  },
  "require-dev": {
    "ext-uopz": "*",
    "dg/bypass-finals": "^1.1",
    "codeclimate/php-test-reporter": "^0.3",
    "phpunit/phpunit": "^7.0",
    "zendframework/zend-paginator": "^2.8",
    "zendframework/zend-hydrator": "3.0"
  },
  "suggest": {
    "zendframework/zend-paginator": "^2.8, to support pagination usage",
    "zendframework/zend-hydrator": "^3.0, to support hydration when using zend-expressive-hal"
  },
  "autoload": {
    "psr-4": {
      "XDevApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "XDevApiTest\\": "test/"
    }
  },
  "extra": {
    "zf": {
      "config-provider": "XDevApi\\ConfigProvider"
    }
  },
  "scripts": {
    "unittest": "php ./vendor/bin/phpunit -v"
  }
}
